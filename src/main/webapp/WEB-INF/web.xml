<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
<!--    PoniÅ¼szy kod wykomentowano na potrzeby uruchomienia nowego servletu HelloWorld-->
<!--    <welcome-file-list>-->
<!--        <welcome-file>welcome.jsp</welcome-file>-->
<!--    </welcome-file-list>-->
    
<!--    Zakomentowano na potrzeby utworzenia konfiguracji adnotacjami zamiast w pliku web.xml-->
    <servlet>
        <servlet-name>HelloWorldServlet</servlet-name>
        <servlet-class>com.jg.servlet.HelloWorldServlet</servlet-class>
        <init-param>
            <param-name>userID</param-name>
            <param-value>12345</param-value>
        </init-param>
        <init-param>
            <param-name>localization</param-name>
            <param-value>Poland</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorldServlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>MyFilter</filter-name>
        <filter-class>com.jg.filter.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyFilter</filter-name>
        <url-pattern>/hello</url-pattern>
    </filter-mapping>
</web-app>